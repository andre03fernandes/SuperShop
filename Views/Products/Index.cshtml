@model IEnumerable<SuperShop.Data.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<br />

<h1 style="font-family: 'Lucida Handwriting'; text-align: center">Products</h1> <hr /> <br />
<p class="create">
    <a asp-action="Create"><i style="font-size: 35px" class="fa-solid fa-circle-plus"></i></a>
</p> <br />
<table class="table" style="border: 2px solid black">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFullPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastPurchase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td style="vertical-align: middle">
                    @if (!string.IsNullOrEmpty(item.ImageFullPath))
                    {
                        <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:105px; height:100px;max-width:100%;max-height:auto" />
                    }
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.LastPurchase)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.LastSale)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td style="vertical-align: middle">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-book"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<br /><br /><br /><br /><br />
