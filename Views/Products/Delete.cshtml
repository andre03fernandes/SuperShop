@model SuperShop.Data.Entities.Product

@{
    ViewData["Title"] = "Delete";
}
<br />
<h1 style="text-align: center; font-family: 'Lucida Handwriting'"><b>Delete</b></h1>

<h3 style="text-align: center"><b>Are you sure you want to delete this?</b></h3>
<div>
        <hr /> <br />
        <div class="row">
        <div class="col-md-8">
            <dl class="row">
            <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.LastPurchase)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.LastPurchase)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.LastSale)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.LastSale)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Stock) 
        </dd>
        <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <br />
        &ensp; <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>
        <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i></a>
        </form>
        </dl>
        </div>
    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:300px; height:350px;max-width:100%;" />
    </div>
    </div>
</div>
